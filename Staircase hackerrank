#include <assert.h>
#include <limits.h>
#include <math.h>
#include <stdbool.h>
#include <stddef.h>
#include <stdint.h>
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main()
{
    int i,j,k,l,m,n;
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
        for(k=0;k<n-1-i;k++)
            printf(" ");
        for(l=0;l<=i;l++)    
            printf("#");
        printf("\n");
    }
        
    

    return 0;
}
